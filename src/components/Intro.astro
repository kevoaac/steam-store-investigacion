---
import { getI18N } from "@/i18n";
import Logo from "./icons/Logo.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  class="text-lg md:text-xl text-left px-10 md:px-20 max-w-[80ch] text-pretty mx-auto md:my-24"
>
  <Logo class="w-16 mb-10 m-auto" />
  <h1
    class="text-2xl md:text-5xl font-semibold text-center text-wrap mx-auto mb-10 tracking-wide"
  >
    {i18n.INTRO_TITLE}
  </h1>

  <p set:html={i18n.INTRO_DESCRIPTION_1} />
  <p>
    {i18n.INTRO_DESCRIPTION_2}
  </p>
  <p>
    {i18n.INTRO_DESCRIPTION_3}
  </p>
</section>
