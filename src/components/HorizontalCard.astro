---
const { title, description, img } = Astro.props;
---

<section
  class="flex flex-col my-20 items-center border shadow md:flex-row border-gray-700 bg-gray-800 max-w-7xl mx-auto rounded-lg overflow-hidden"
>
  <img
    class="object-cover w-full max-h-72"
    src={img}
    alt="imagen de resursos digitales"
  />
  <div class="flex flex-col justify-between p-4 leading-normal max-w-2xl">
    <h1 class="mb-2 text-4xl font-bold tracking-tight text-white">
      {title}
    </h1>
    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
  </div>
</section>
