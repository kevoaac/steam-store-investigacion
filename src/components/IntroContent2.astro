---
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  class="text-lg md:text-xl text-left px-10 md:px-20 max-w-[80ch] text-pretty mx-auto md:my-24"
>
  <h1
    class="text-2xl md:text-5xl font-semibold text-center text-wrap mx-auto mb-10 tracking-wide"
  >
    {i18n.INTRO_CONTENT_2_TITLE_1}
  </h1>

  <p>
    {i18n.INTRO_CONTENT_2_CONTENT_1}
  </p>
  <p>
    {i18n.INTRO_CONTENT_2_CONTENT_2}
  </p>
  <p>
    {i18n.INTRO_CONTENT_2_CONTENT_3}
  </p>
</section>
