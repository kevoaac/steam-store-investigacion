---
const { url, target, class: className, ...rest } = Astro.props;
---

<a
  href="/Informe_Investigacion_SteamStore.pdf"
  download="Informe_Investigacion_SteamStore.pdf"
  target=`${target ?? '_blank'}`
  rel="noopener noreferrer"
  class:list={[
    "w-fit",
    "lg:text-2xl",
    "font-medium",
    "no-underline",
    "px-2",
    "uppercase",
    className,
  ]}
  {...rest}
>
  <slot />
</a>

<style>
  a {
    transition:
      text-shadow 0.5s ease-out,
      box-shadow 0.3s ease-out,
      border-color 0.3s ease-out;

    border-bottom-width: 2px;
    border-color: transparent;
  }

  a:hover {
    text-shadow:
      0 0 10px rgba(255, 255, 255, 0.8),
      0 0 20px rgba(255, 255, 255, 0.8),
      0 0 22px rgba(255, 255, 255, 0.8),
      0 0 40px rgba(66, 220, 219, 0.8),
      0 0 60px rgba(66, 220, 219, 0.8),
      0 0 80px rgba(66, 220, 219, 0.5),
      0 0 100px rgba(66, 220, 219, 0.5),
      0 0 140px rgba(66, 220, 219, 0.5),
      0 0 200px rgba(66, 220, 219, 0.5);

    border-bottom-width: 2.5px;
    border-color: rgba(255, 255, 255, 1);
  }
</style>
