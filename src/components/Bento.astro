---
import BarChart from "./charts/BarChart";
import BentoItem from "./BentoItem.astro";
import BentoItemBottomGradient from "./BentoItemBottomGradient.astro";
import GraficasBento from "./GraficasBento.astro";
import { getI18N } from "@/i18n";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<section
  class={`
  w-full max-w-7xl
  grid grid-cols-10  gap-4
  mx-auto px-5 lg:px-0
`}
>
  <BentoItem class="col-span-10" title={i18n.BENTO_TITLE_1}>
    <div
      slot="image"
      class="absolute h-full w-full bg-[#0e141b] bg-cover -z-10 opacity-50"
    >
    </div>
    <p slot="content">
      {i18n.BENTO_CONTENT_1}
    </p>
  </BentoItem>
  <BentoItem class="col-span-10 md:col-span-6" title={i18n.BENTO_TITLE_2}>
    <div
      slot="image"
      class="absolute h-full w-full bg-[#1d2938] bg-cover -z-10 opacity-50"
    >
    </div>
    <p slot="content">
      {i18n.BENTO_CONTENT_2}
    </p>
  </BentoItem>
  <BentoItem class="col-span-10 md:col-span-4" title={i18n.BENTO_TITLE_3}>
    <div
      slot="image"
      class="absolute h-full w-full bg-[#1d2938] bg-cover -z-10 opacity-50"
    >
    </div>
    <p slot="content">
      {i18n.BENTO_CONTENT_3}
    </p>
  </BentoItem>
  <BentoItem class="col-span-10 md:col-span-10" title={i18n.BENTO_TITLE_4}>
    <div
      slot="image"
      class="absolute h-full w-full bg-[#1d2938] bg-cover -z-10 opacity-50"
    >
    </div>
    <p slot="content">
      {i18n.BENTO_CONTENT_4}
    </p>
  </BentoItem>
</section>
