---
import { getI18N } from "@/i18n";
import Logo from "./icons/Logo.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const { title } = Astro.props;
---

<section
  class="text-lg md:text-xl text-left px-10 md:px-20 max-w-[80ch] text-pretty mx-auto md:my-24"
>
  <div class="flex justify-start items-center mb-10 gap-2">
    <slot name="logo" />
    <h1 class="text-2xl md:text-5xl font-semibold text-wrap tracking-wide">
      {title}
    </h1>
  </div>

  <slot name="p1" />
  <slot name="p2" />
  <slot name="p3" />
  <slot name="p4" />
</section>
